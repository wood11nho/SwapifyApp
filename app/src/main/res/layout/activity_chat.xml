<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/background"
        android:scaleType="centerCrop"/>

    <!-- chat_activity.xml -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Back button   -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/back_toolbar_chat"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:elevation="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageButton
                android:id="@+id/btnBack_chat"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="?attr/selectableItemBackground"
                android:contentDescription="@string/back_button"
                android:src="@drawable/ic_back_button"
                tools:ignore="TouchTargetSizeCheck"
                tools:layout_editor_absoluteX="16dp" />

        </androidx.appcompat.widget.Toolbar>

        <!-- Display other person's name -->
        <TextView
            android:id="@+id/otherPersonNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?attr/colorSecondary"
            android:textSize="26sp"
            android:textStyle="bold"
            android:text="Other Person's Name"
            android:layout_marginBottom="8dp"
            android:layout_below="@+id/back_toolbar_chat"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            />

        <!-- Display chat messages -->
        <ListView
            android:id="@+id/listViewChatMessages"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/layoutMessageInput"
            android:layout_below="@+id/otherPersonNameTextView"
            android:divider="@android:color/transparent"
            android:dividerHeight="8dp"
            />

        <!-- Message input field and send button -->
        <RelativeLayout
            android:id="@+id/layoutMessageInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_alignParentBottom="true">

            <EditText
                android:id="@+id/editTextMessageInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Type a message"
                android:textColorHint="?android:textColorHint"
                android:textColor="?attr/colorOnPrimary"
                android:inputType="text"
                android:imeOptions="actionSend"
                android:layout_toStartOf="@+id/buttonSendMessage"
                android:layout_marginEnd="8dp"
                />

            <ImageButton
                android:id="@+id/buttonSendMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_send"
                android:contentDescription="@string/send_message"
                android:background="?attr/selectableItemBackground"
                android:layout_marginEnd="8dp"
                android:layout_alignParentEnd="true"
                />

        </RelativeLayout>
    </RelativeLayout>
</FrameLayout>
