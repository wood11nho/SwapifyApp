<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Swapify" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/purple_700</item>

        <!-- Background color -->
        <item name="android:windowBackground">@color/white</item>

        <!-- Text color -->
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/gray</item>

        <!-- Action Bar -->
        <item name="actionBarTheme">@style/ThemeOverlay.AppCompat.ActionBar</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>

        <!-- Hints and light texts, like a grey color -->
        <item name="android:textColorHint">@color/gray</item>

        <!-- Navigation Bar Color -->
        <item name="android:navigationBarColor">@color/purple_500</item>

        <!-- Red Color for verification purposes       -->
        <item name="colorError">@color/red_500</item>

        <item name="selectableItemBackgroundBorderless">@color/gray</item>

        <!-- Font Family -->
        <item name="android:fontFamily">@font/font_family</item>
        <!-- Other items can be added based on your needs -->
    </style>

    <!-- Custom Action Bar Style -->
    <style name="MyActionBar" parent="@style/Widget.AppCompat.ActionBar">
        <item name="background">@color/purple_500</item>
        <item name="titleTextStyle">@style/MyActionBarTitleText</item>
    </style>

    <!-- Custom Title Text Style for Action Bar -->
    <style name="MyActionBarTitleText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>
</resources>