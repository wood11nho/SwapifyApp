<resources>
    <!-- Base application theme. -->
    <style name="Theme.Swapify" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/deep_blue</item>
        <item name="colorPrimaryVariant">@color/mid_tone_blue</item>
        <item name="colorOnPrimary">@color/off_white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/warm_amber</item>
        <item name="colorSecondaryVariant">@color/burnt_sienna</item>
        <item name="colorOnSecondary">@color/near_black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/dark_blue</item>

        <!-- Background color -->
        <item name="android:windowBackground">@color/light_gray</item>

        <!-- Text color -->
        <item name="android:textColorPrimary">@color/near_black</item>
        <item name="android:textColorSecondary">@color/medium_gray</item>

        <!-- Action Bar -->
        <item name="actionBarTheme">@style/ThemeOverlay.AppCompat.ActionBar</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>

        <!-- Hints and light texts -->
        <item name="android:textColorHint">@color/light_blue</item>

        <!-- Navigation Bar Color -->
        <item name="android:navigationBarColor">@color/deep_blue</item>

        <!-- Red Color for verification purposes -->
        <item name="colorError">@color/red_700_dark</item>

        <item name="selectableItemBackgroundBorderless">@color/light_blue</item>

        <!-- Font Family -->
        <item name="android:fontFamily">@font/font_family</item>
    </style>

    <!-- Custom Action Bar Style -->
    <style name="MyActionBar" parent="@style/Widget.AppCompat.ActionBar">
        <item name="background">@color/deep_blue</item>
        <item name="titleTextStyle">@style/MyActionBarTitleText</item>
    </style>

    <!-- Custom Title Text Style for Action Bar -->
    <style name="MyActionBarTitleText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/off_white</item>
    </style>
</resources>
