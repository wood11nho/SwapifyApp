<resources>
    <!-- Base application theme. -->
    <style name="Theme.Swapify.Dark" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/deep_blue</item>
        <item name="colorPrimaryVariant">@color/mid_tone_blue</item>
        <item name="colorPrimaryDark">@color/dark_blue</item>
        <item name="colorOnPrimary">@color/off_white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/warm_amber</item>
        <item name="colorSecondaryVariant">@color/burnt_sienna</item>
        <item name="colorOnSecondary">@color/near_black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/dark_blue</item>

        <!-- Background color -->
        <item name="android:windowBackground">@color/light_gray</item>

        <!-- Surface color -->
        <item name="colorSurface">@color/light_gray</item>
        <item name="colorOnSurface">@color/near_black</item>

        <!-- Text color -->
        <item name="android:textColorPrimary">@color/near_black</item>
        <item name="android:textColorSecondary">@color/medium_gray</item>

        <!-- Action Bar -->
        <item name="actionBarTheme">@style/ThemeOverlay.AppCompat.ActionBar</item>

        <!-- Hints and light texts -->
        <item name="android:textColorHint">@color/light_blue</item>

        <!-- Navigation Bar Color -->
        <item name="android:navigationBarColor">@color/deep_blue</item>

        <!-- Red Color for verification purposes -->
        <item name="colorError">@color/red_700_dark</item>

        <item name="selectableItemBackgroundBorderless">@color/light_blue</item>

        <!-- Font Family -->
        <item name="android:fontFamily">@font/font_family</item>
    </style>

    <style name="Theme.Swapify" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/deep_blue</item>
        <item name="colorSecondaryVariant">@color/mid_tone_blue</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/warm_amber</item>
        <item name="colorPrimaryVariant">@color/burnt_sienna</item>
        <item name="colorPrimaryDark">@color/dark_orange</item>
        <item name="colorOnPrimary">@color/off_white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/warm_amber</item>

        <!-- Background color -->
        <item name="android:windowBackground">@color/light_gray</item>

        <!-- Surface color -->
        <item name="colorSurface">@color/light_gray</item>
        <item name="colorOnSurface">@color/near_black</item>

        <!-- Text color -->
        <item name="android:textColorPrimary">@color/near_black</item>
        <item name="android:textColorSecondary">@color/medium_gray</item>

        <!-- Action Bar -->
        <item name="actionBarTheme">@style/ThemeOverlay.AppCompat.ActionBar</item>

        <!-- Hints and light texts -->
        <item name="android:textColorHint">@color/light_blue</item>

        <!-- Navigation Bar Color -->
        <item name="android:navigationBarColor">@color/warm_amber</item>

        <!-- Red Color for verification purposes -->
        <item name="colorError">@color/red_700_dark</item>

        <item name="selectableItemBackgroundBorderless">@color/light_blue</item>

        <!-- Font Family -->
        <item name="android:fontFamily">@font/font_family</item>
    </style>

    <style name="Theme.Swapify.SplashScreen" parent = "Theme.Swapify">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <!-- Specify the text color -->
        <item name="android:textColor">@color/dark_blue</item>
        <!-- Specify the hint text color -->
        <item name="android:textColorHint">@color/light_blue</item>
    </style>


</resources>
